@model IEnumerable<Djalma.Models.Marca>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Marcas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MarcaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MarcaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.MarcaId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
